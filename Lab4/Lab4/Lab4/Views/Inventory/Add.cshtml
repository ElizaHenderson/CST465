@Model Inventory
@{
    ViewBag.Title = "Add Inventory Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add</h2>
@using (Html.BeginForm("Add", "Inventory", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.EditorForModel()
    <input type="submit" value="Add Inventory Item" class="btn btn-success" />
}
